# Mail Vault Environment Configuration
# Copy this file to .env and adjust the values for your setup

# Application Settings
NODE_ENV=production
PORT=3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-use-openssl-rand-base64-32

# Database Configuration
DATABASE_URL=file:../data/database/main.db
DATA_DIR=./data/accounts

# Attachment Storage
ATTACHMENTS_DIR=./data/attachments

# Sync Service Configuration
SYNC_INTERVAL_MINUTES=30
MAX_SYNC_ERRORS=5
SYNC_BATCH_SIZE=1
SYNC_BATCH_DELAY=500

# Logging
LOG_LEVEL=info

# Security (Optional)
# If you want to run behind a reverse proxy:
# NEXTAUTH_URL=https://yourdomain.com
# TRUST_PROXY=true 