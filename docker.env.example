# Mail Vault Docker Environment Configuration
# Copy this file to .env and adjust the values for your setup

# Application Settings
NODE_ENV=production
PORT=3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-use-openssl-rand-base64-32

# Database Configuration
DATABASE_URL=file:./data/main.db
DATA_DIR=/app/data

# Sync Service Configuration
SYNC_INTERVAL_MINUTES=30
MAX_SYNC_ERRORS=5

# Logging
LOG_LEVEL=info

# Security (Optional)
# If you want to run behind a reverse proxy:
# NEXTAUTH_URL=https://yourdomain.com
# TRUST_PROXY=true 