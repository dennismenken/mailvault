# Mail Vault Environment Configuration
# Copy this file to .env and adjust the values for your setup

# Application Settings
NODE_ENV=production
PORT=3000

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=file:../data/database/main.db
DATA_DIR=./data/accounts

# Attachment Storage
ATTACHMENTS_DIR=./data/attachments

# Email Sync Configuration
SYNC_INTERVAL_MINUTES=30
MAX_SYNC_ERRORS=5

# Sync Performance Optimization
SYNC_BATCH_SIZE=5
SYNC_BATCH_DELAY=1000
SYNC_RECONNECT_DELAY=5000

# Logging
LOG_LEVEL=info

# Security (Optional)
# If you want to run behind a reverse proxy:
# NEXTAUTH_URL=https://yourdomain.com
# TRUST_PROXY=true 